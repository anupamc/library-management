<!DOCTYPE html>

  <head>
    <title>Library Management System</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="styles.css">
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script src="script.js"></script>

    <%= yield :head %>


  </head>
  <body>

  <div id='cssmenu'>
  <ul>
     <li class='<%= current_class?(root_path) %>'><a href='<%= root_path %>'><span>Home</span></a></li>
     <li class='<%= current_class?(books_path) %>'><a href='<%= books_path %>'><span>Manage Books</span></a></li>
     <li class='<%= current_class?(new_user_path) %>'><a href='<%= users_path %>'><span>Manage Users</span></a></li>
     <li class='<%= current_class?(search_book_path) %>'><a href='<%= search_book_path %>'><span>Search Book</span></a></li>
     <li class='<%= current_class?(search_user_path) %> last'><a href='<%= search_user_path %>'><span>Search User</span></a></li>
  </ul>
  </div>
   <% if flash[:notice] %>
  <div id="notice"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:error] %>
   <div id="warning"><%= flash[:error] %></div>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>

  </body>
</html>
  