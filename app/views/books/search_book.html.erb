<h1>Search Book</h1>

<%= form_with(url: search_book_result_path, method: :get, local: true) do |form| %>
  <div class="field">
  	<p>Title</p>
    <%= text_field_tag :title %>
  </div>

  <div class="field">
  	<p>Author</p>
    <%= text_field_tag :author %>
  </div>

  <div class="actions">
    <%= form.submit 'Search' %>
  </div>
<% end %>